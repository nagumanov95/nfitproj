<Window x:Class="nfit.fio"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:nfit"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Регистрация" Height="320" Width="420"
        MinHeight="320" MinWidth="420"
        MaxHeight="320" MaxWidth="420" Icon="Resources/useric.ico" >
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="back.jpg"/>
        </Grid.Background>
        <TextBox x:Name="fiotb" HorizontalAlignment="Center"  materialDesign:HintAssist.Hint="Тут вводить ваше ФИО" Style="{StaticResource MaterialDesignOutlinedTextBox}" Height="87" Margin="113,87,133,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="156"/>
        <Label Content="Введите ваше ФИО, чтобы&#xD;&#xA;зарегистрироваться!" FontFamily="Arial" FontWeight="Bold" HorizontalAlignment="Left" Margin="104,23,0,0" VerticalAlignment="Top" Width="174" Height="45"/>
        <Button x:Name="registr" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="107,211,0,0" VerticalAlignment="Top" Width="174" Click="registr_Click"/>
    </Grid>
</Window>
